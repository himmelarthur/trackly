extends layout

block css
  link(rel='stylesheet', href='/stylesheets/home.css')

block content
  .content
    .header
      .add-track.js-add-track.dn
        span.js-toggle-submit +
      h2 Trackly
      .profile.table.dn
        img(src="http://graph.facebook.com/" + expose.user.uid + "/picture?width=100&height=100", alt="")
      #form.form
    #list.track-list

block js
  script(src="/javascripts/main.js")
  script.
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '809001332444427',
        xfbml      : true,
        version    : 'v2.1'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
