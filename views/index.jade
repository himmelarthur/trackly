extends layout

block css
  link(rel='stylesheet', href='/stylesheets/home.css')

block content
  .left-bar
    h1 Trackly
    .left-profile
      img(src="http://graph.facebook.com/1106072612/picture?width=100")
      p.left-profile__name Arthur Himmel
    .add-track
      button.button.js-add-track.js-toggle-submit + Add a track

    ul.left-menu
      li Home
      li Archived
  .content
    #list.track-list
  #track-form.track-form.hidden

block js
  if (prod)
    script(src="/javascripts/m.js")
  else
    script(src="/javascripts/main.js")
